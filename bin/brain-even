#!/usr/bin/env php

<?php

$autoloadPath1 = __DIR__ . '/../../../autoload.php';
$autoloadPath2 = __DIR__ . '/../vendor/autoload.php';
if (file_exists($autoloadPath1)) {
	require_once $autoloadPath1;
} else {
	require_once $autoloadPath2;
}

use function BrainGames\Games\Even\rulesGame;
use function BrainGames\Games\Even\getDataEven;
use function BrainGames\Cli\run;

$amoundRounds = 3; // Количество раундов
$data = getDataEven($amoundRounds); // Генерируем значения для игры
run(rulesGame(), $data); // Запускаем игру